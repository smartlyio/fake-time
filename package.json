{
  "name": "@smartlyio/fake-time",
  "license": "MIT",
  "version": "1.0.0",
  "description": "fake time and timers",
  "private": false,
  "author": "Smartly.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "yarn jest test/",
    "render": "yarn ts-node render.ts",
    "build": "rm -rf ./dist/* && yarn lint && yarn test && yarn render && tsc",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "lint:fix": "tslint --fix -c tslint.json --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/fake-time.git"
  },
  "peerDependencies": {
    "jest": "^24.5.0"
  },
  "keywords": [
    "jest",
    "timer",
    "timer",
    "mock time",
    "fake"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.77",
    "@types/node": "^11.11.3",
    "jest": "^24.5.0",
    "jsverify": "^0.8.4",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "^1.0.0-pre.24",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testRegex": "examples/.*\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
